<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Colorlib Templates">
    <meta name="author" content="Colorlib">
    <meta name="keywords" content="Colorlib Templates">

    <!-- Title Page-->
    <title>Alemni | Setup profile</title>

    <!-- Icons font CSS-->
    <link href="Front-Office/vendor/mdi-font/css/material-design-iconic-font.min.css" rel="stylesheet" media="all">
    <link href="Front-Office/vendor/font-awesome-4.7/css/font-awesome.min.css" rel="stylesheet" media="all">
    <!-- Font special for pages-->
    <link href="https://fonts.googleapis.com/css?family=Poppins:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <!-- Vendor CSS-->
    <link href="Front-Office/vendor/select2/select2.min.css" rel="stylesheet" media="all">
    <link href="Front-Office/vendor/datepicker/daterangepicker.css" rel="stylesheet" media="all">

    <!-- Main CSS-->
    <link href="Front-Office/css/main.css" rel="stylesheet" media="all">
</head>

<body>
    <div class="page-wrapper bg-gra-02 p-t-130 p-b-100 font-poppins">
        <div class="wrapper wrapper--w680">
            <div class="card card-4">
                <div class="card-body">
                <div class="row row-space">
                    <h2 class="title">One more step</h2>
                </div>
                    {% for flashError in app.flashes('verify_email_error') %}
                    <div class="alert alert-danger" role="alert">{{ flashError }}</div>
                    {% endfor %}
                    {{ form_start(registrationForm) }}
                        <div class="row row-space">
                            <div class="col-2">
                                <div class="input-group">
                                    <label class="label">first name</label>
                                    {{ form_widget(registrationForm.firstName,{'attr':{'class':'input--style-4'}}) }}
                                    {{ form_errors(registrationForm.firstName) }}
                                </div>
                            </div>
                            <div class="col-2">
                                <div class="input-group">
                                    <label class="label">last name</label>
                                    {{ form_widget(registrationForm.lastName,{'attr':{'class':'input--style-4'}}) }}
                                    {{ form_errors(registrationForm.lastName) }}
                                </div>
                            </div>
                        </div>
                        <div class="row row-space">
                        <div class="col-2">
                        <div class="input-group">
                            <label class="label">Subject</label>
                            {{ form_widget(registrationForm.gender,{'attr':{'class':'rs-select2 js-select-simple select--no-search'}}) }}
                            {{ form_errors(registrationForm.gender) }}
                        </div>
                        </div>
                        <div class="col-2">
                                <div class="input-group">
                                    <label class="label">Phone Number</label>
                                    {{ form_widget(registrationForm.phoneNumber,{'attr':{'class':'input--style-4'}}) }}
                                    {{ form_errors(registrationForm.phoneNumber)}}
                                </div>
                            </div>
                        </div>
                        <div class="row row-space">
                            <div class="col-2">
                                <div class="input-group">
                                    <label class="label">Profile picture</label>
                                    {{ form_widget(registrationForm.profilePicture,{'attr':{'class':'btn btn--radius-2 btn--blue'}}) }}
                                    {{ form_errors(registrationForm.profilePicture) }}
                                </div>
                            </div>
                        </div>
                        <div class="row row-space">
                            <div class="col-2">
                                <div class="input-group">
                                    <label class="label">Enter password</label>
                                    {{ form_widget(registrationForm.plainPassword.first,{'attr':{'class':'input--style-4'}}) }}
                                    {{ form_errors(registrationForm.plainPassword.first) }}
                                </div>
                            </div>
                            <div class="col-2">
                                <div class="input-group">
                                    <label class="label">Confirm password</label>
                                    {{ form_widget(registrationForm.plainPassword.second,{'attr':{'class':'input--style-4'}}) }}
                                    {{ form_errors(registrationForm.plainPassword.second) }}
                                </div>
                            </div>
                        </div>
                        <div class="p-t-15">
                            <button class="btn btn--radius-2 btn--blue" type="submit">Sign in</button>
                        </div>
                    {{ form_end(registrationForm) }}
                </div>
            </div>
        </div>
    </div>

    <!-- Jquery JS-->
    <script src="Front-Office/vendor/jquery/jquery.min.js"></script>
    <!-- Vendor JS-->
    <script src="Front-Office/vendor/select2/select2.min.js"></script>
    <script src="Front-Office/vendor/datepicker/moment.min.js"></script>
    <script src="Front-Office/vendor/datepicker/daterangepicker.js"></script>

    <!-- Main JS-->
    <script src="Front-Office/js/global.js"></script>

</body>

</html>